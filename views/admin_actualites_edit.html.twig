{% extends "layout_admin.html.twig" %}

{% block body %}
    <h1>Modifier une Actualit√©</h1>
    <form action="" method="post" class="actuNews" enctype="multipart/form-data">
        <p class="title">
            <label for="title">Titre</label>
            <input type="text" name="title" value="{{ actualite.title }}">
        </p>
        <p class="title">
            <label for="slug">Chemin</label>
            <input type="text" name="slug" value="{{ actualite.slug }}">
        </p>
        <p class="title">
            <label for="content_short">Description courte</label>
            <input type="text" name="content_short" value="{{ actualite.content_short }}">
        </p>
        <p class="synopsis">
            <label for="content_full">Description Longue</label>
            <textarea name="content_full" id="" cols="30" rows="10">{{ actualite.content_full }}</textarea>
        </p>
        <p class="synopsis">
            <input type="file" name="image">
            <input type="hidden" name="lastimage" value="{{ actualite.image }}">
        </p>
        <p class="synopsis">
            <label for="">Alternatif de l'image (SEO)</label>
            <input type="text" name="alt" value="{{ actualite.alt }}">
        </p>
        <input type="submit" class="btn btn-default actuInput">
    </form>
{% endblock %}