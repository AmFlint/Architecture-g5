{% extends "layout_admin.html.twig" %}
{% block body %}
    <h1>Messages re√ßus</h1>
    <div class="table">
        <div class="table-row table-head">
            <div class="table-cell">Nom</div>
            <div class="table-cell">Mail</div>
            <div class="table-cell">Service</div>
            <div class="table-cell">Objet</div>
            <div class="table-cell">Date</div>
        </div>
        {% for message in messages %}
            <a href="/admin/contact/{{ message.id }}" class="table-row">
                <div class="table-cell">{{ message.nom }}</div>
                <div class="table-cell">{{ message.mail }}</div>
                <div class="table-cell">{{ message.service }}</div>
                <div class="table-cell">{{ message.object }}</div>
                <div class="table-cell">{{ message.date }}</div>
            </a>
        {% endfor %}
    </div>
{% endblock %}