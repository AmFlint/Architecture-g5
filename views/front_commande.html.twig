{% extends "layout_front.html.twig" %}

    {% block body %}
        <h2>Formulaire d'abonnement</h2>
        <section class="command-form">
            <form action="commande_submit" method="get" accept-charset="utf-8">
                <label>Raison sociale
                    <input type="text" name="raison_sociale" value="">
                </label>
                <label>Activité
                    <input type="text" name="activite" value="activite">
                </label>
                <label>Nom
                    <input type="text" name="nom" value="">
                </label>
                <label>Prénom
                    <input type="text" name="prenom" value="">
                </label>
                <label>Fonction
                    <input type="text" name="fonction" value="">
                </label>
                <label>Adresse
                    <input type="text" name="adresse" value="">
                </label>
                <label>Code postal
                    <input type="text" name="code_postal" value="">
                </label>
                <label>Ville
                    <input type="text" name="ville" value="">
                </label>
                <label>Pays
                    <input type="text" name="pays" value="">
                </label>
                <label>Téléphone
                    <input type="text" name="telephone" value="">
                </label>
                <label>Fax
                    <input type="text" name="fax" value="">
                </label>
                <label>Adresse e-mail
                    <input type="text" name="mail" value="">
                </label>
                <label>Confirmez l'e-mail
                    <input type="text" name="e-mail" value="">
                </label>
                <label>Zone Géographique
                <select id=""  name="zone_geographique">
                    <option value="france_metropolitaine">France Métropolitaine</option>
                    <option value="europe">Europe</option>
                    <option value="dom">DOM</option>
                    <option value="tom">TOM</option>
                </select>
                </label>
                <label>Chooix de la revue
                <select id=""  name="revue">
                    <option value="280">280</option>
                    <option value="281">281</option>
                    <option value="282">282</option>
                    <option value="283">283</option>
                    <option value="284">284</option>
                    <option value="285">285</option>
                    <option value="275">275</option>
                    <option value="276">276</option>
                    <option value="277">277</option>
                    <option value="278">278</option>
                </select>
                </label>
                <label>Quantité
                <select id=""  name="quantite">
                    <option value="1">1</option>
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="25">25</option>
                    <option value="30">30</option>
                </select>
                </label>
                <div class="button-form">
                    <input type="submit" class="button-send" value="Envoyer">
                </div>
            </form>
        </section>
        <div class="img-commande">
            <img src="/assets/img-content/couv-3-right.png">
        </div>
        <section class="price">
